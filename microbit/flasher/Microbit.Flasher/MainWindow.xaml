<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Title="BBC micro:bit Flasher" Height="280" Width="340" Background="White"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="68*"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/BBC.MicroBit.Flasher;component/bg-section-alt.png"/>
        </Grid.Background>
        <Image Source="/BBC.MicroBit.Flasher;component/micro-bit_primary_colour_master.png" Width="200" Margin="57,0,56.6,92.4" Grid.ColumnSpan="2" />
        <Image Source="/BBC.MicroBit.Flasher;component/microsoftlogo.png" Margin="1,117,69.6,14.4" Grid.Column="1" />
        <Label Content="{Binding Path=Status}" HorizontalAlignment="Center" Margin="16,215,10.6,0" VerticalAlignment="Top" Width="287" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
